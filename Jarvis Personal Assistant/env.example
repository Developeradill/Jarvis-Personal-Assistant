# Rename this file to .env and fill in your key.
OPENAI_API_KEY=PUT_YOUR_KEY_HERE
# Optional: choose a default voice rate (words per minute)
TTS_RATE=170
# Optional: choose a default voice volume (0.0 - 1.0)
TTS_VOLUME=1.0
# Optional: STT backend: whisper or vosk
STT_BACKEND=whisper
# Optional: Vosk model path (used only if STT_BACKEND=vosk)
VOSK_MODEL_DIR=./models/vosk-small-en
# Optional: Whisper model size: tiny, base, small, medium
WHISPER_MODEL_SIZE=base
